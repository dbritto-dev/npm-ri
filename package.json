{
  "name": "npm-ri",
  "private": false,
  "description": "npm install packages using regular expression",
  "version": "0.0.1",
  "author": "Danilo Britto",
  "repository": {
    "type": "git",
    "url": "https://github.com/dbritto-dev/npm-ri.git"
  },
  "source": "./src/index.ts",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.umd.js"
    }
  },
  "sideEffects": false,
  "files": [
    "bin"
  ],
  "bin": {
    "npm-ri": "bin/index.js"
  },
  "scripts": {
    "build": "vite build",
    "check": "biome check ./src"
  },
  "keywords": [
    "npm install",
    "npm install regex",
    "regex"
  ],
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vite-plugin-dts": "^3.9.1"
  },
  "dependencies": {
    "biome": "^0.3.3"
  }
}
